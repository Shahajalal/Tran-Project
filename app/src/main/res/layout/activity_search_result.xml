<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchResult">

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_result"
                android:textColor="#070707"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_marginBottom="70dp"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="@string/search_for"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/unique_id"
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:text="01789767890"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Rahim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/father"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/father_name"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Karim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/mother"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/mother_name"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Rahima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/national_id"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/national_id"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="123456890"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/family_member"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/familymemeber"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/occupation"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/occupation"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Farmer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/monthly_income"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView

                            android:id="@+id/monthly_income"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="8000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/home_no"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/house_no"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/easy_go"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/easy_way"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="School er Pase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:text="@string/comment"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/comment"
                            android:layout_marginLeft="100dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="School er Pase 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="@string/confirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </LinearLayout>


            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit"
                android:layout_margin="10dp"
                android:layout_width="255dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:text="@string/submit_english"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>